<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorBackground">@color/background_bottom</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:statusBarColor">@color/background_top</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/button_tint</item>
    </style>

    <style name="AppTheme.Button.Link" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/button_link_background</item>
        <item name="android:textColor">@color/button_link_text</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.NavigationView.Options" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/optionsBackground</item>
        <item name="itemTextColor">@color/options_text</item>
        <item name="itemIconTint">@color/options_text</item>
    </style>

</resources>
